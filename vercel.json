{
  "github": {
    "enabled": true,
    "silent": false,
    "autoAlias": true,
    "autoJobCancelation": true
  },
  "git": {
    "deploymentEnabled": {
      "master": true
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/transcribe/assemblyai/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/backup/cron/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/index/cron/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/cron/index-attachments/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/agent/cron/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/cron/archie-utility/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/cron/drive-intelligence/route.ts": {
      "maxDuration": 300,
      "memory": 3008
    },
    "app/api/cron/device-sync/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/cron/mcp-health/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/backup/cron",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/index/cron",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/index-attachments",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/agent/cron",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/archie-utility",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/drive-intelligence",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/device-sync",
      "schedule": "*/2 * * * *"
    },
    {
      "path": "/api/cron/mcp-health",
      "schedule": "*/15 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}